---
import BaseLayout from "../layouts/BaseLayout.astro";
import { BASE_URL } from "../constants.ts";
---

<BaseLayout title="User Data Deletion">
	<div class="max-w-4xl mx-auto">
		<header class="text-center mb-12">
			<h1 class="text-5xl font-bold text-gray-800 mb-4">User Data Deletion</h1>
			<p class="text-xl text-gray-600">Manage your data privacy</p>
		</header>

		<main>
			<section class="bg-white rounded-lg shadow-lg p-8 mb-8">
				<h2 class="text-3xl font-semibold text-gray-800 mb-6">User Data Deletion Request</h2>
				<div class="text-gray-600 leading-relaxed">
					<p class="mb-6">
						Currently, this service is under development.
					</p>
					<p class="mb-6">
						Since we are in the development phase, we do not collect or store any user data.
					</p>
					<p class="mb-6">
						Since no data is stored, there is no data to delete.
					</p>
					<p class="mb-6">
						When the service is officially launched in the future, we will prepare and provide procedures for user data deletion.
					</p>
					<div class="bg-green-50 border-l-4 border-green-400 p-4 mt-6">
						<p class="text-green-700 font-semibold">Data Assurance</p>
						<p class="text-green-600">The current service does not store any user data, so there is no need for deletion.</p>
					</div>
				</div>
			</section>

			<section class="text-center">
				<a href={`${BASE_URL}/`} class="btn btn-primary btn-lg">Back to Home</a>
			</section>
		</main>
	</div>
</BaseLayout>