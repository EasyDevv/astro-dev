---
import BaseLayout from "../layouts/BaseLayout.astro";
import { BASE_URL } from "../constants.ts";
---

<BaseLayout title="Privacy Policy">
	<div class="max-w-4xl mx-auto">
		<header class="text-center mb-12">
			<h1 class="text-5xl font-bold text-gray-800 mb-4">Privacy Policy</h1>
			<p class="text-xl text-gray-600">We respect your privacy</p>
		</header>

		<main>
			<section class="bg-white rounded-lg shadow-lg p-8 mb-8">
				<h2 class="text-3xl font-semibold text-gray-800 mb-6">Privacy Policy</h2>
				<div class="text-gray-600 leading-relaxed">
					<p class="mb-6">
						Currently, this service is under development.
					</p>
					<p class="mb-6">
						Since we are in the development phase, we do not collect or store any personal information.
					</p>
					<p class="mb-6">
						When the service is officially launched in the future, we will establish and announce a privacy policy in accordance with relevant laws and regulations.
					</p>
					<div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mt-6">
						<p class="text-yellow-700 font-semibold">Development Status Notice</p>
						<p class="text-yellow-600">Currently operating for testing and development purposes only. No actual user data is stored.</p>
					</div>
				</div>
			</section>

			<section class="text-center">
				<a href={`${BASE_URL}/`} class="btn btn-primary btn-lg">Back to Home</a>
			</section>
		</main>
	</div>
</BaseLayout>