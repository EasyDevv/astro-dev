---
import BaseLayout from "../layouts/BaseLayout.astro";
import { BASE_URL } from "../constants.ts";
---

<BaseLayout title="Terms of Service">
	<div class="max-w-4xl mx-auto">
		<header class="text-center mb-12">
			<h1 class="text-5xl font-bold text-gray-800 mb-4">Terms of Service</h1>
			<p class="text-xl text-gray-600">Please read our terms carefully</p>
		</header>

		<main>
			<section class="bg-white rounded-lg shadow-lg p-8 mb-8">
				<h2 class="text-3xl font-semibold text-gray-800 mb-6">Terms of Service</h2>
				<div class="text-gray-600 leading-relaxed">
					<p class="mb-6">
						Currently, this service is under development.
					</p>
					<p class="mb-6">
						Since we are in the development phase, no official terms of service for using the service have been established yet.
					</p>
					<p class="mb-6">
						When the service is officially launched in the future, we will establish terms of service in accordance with relevant laws and regulations and announce them.
					</p>
					<div class="bg-blue-50 border-l-4 border-blue-400 p-4 mt-6">
						<p class="text-blue-700 font-semibold">Development Status Notice</p>
						<p class="text-blue-600">Currently operating for testing and development purposes only. Terms of service do not apply at this time.</p>
					</div>
				</div>
			</section>

			<section class="text-center">
				<a href={`${BASE_URL}/`} class="btn btn-primary btn-lg">Back to Home</a>
			</section>
		</main>
	</div>
</BaseLayout>